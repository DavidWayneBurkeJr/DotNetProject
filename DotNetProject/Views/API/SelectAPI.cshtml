@model DotNetProject.Models.APIListModel
@{ 
<form asp-controller="API" asp-action="SelectAPI" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <div class="row">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="APIName" class="control-label"></label>
                <select asp-for="Id" class="form-control" asp-items="@(new SelectList(@ViewBag.APIList, "Id", "APIName"))"></select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <input id="Submit1" type="submit" value="submit" />
            </div>
        </div>
    </div>
</form>
}
